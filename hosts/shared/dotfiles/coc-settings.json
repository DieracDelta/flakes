{
        "languageserver": {
                "nix": {
                        "command": "rnix-lsp",
                        "filetypes": [
                                "nix"
                        ]
                },
                "clangd": {
                        "command": "clangd",
                        "args": ["--background-index"],
                        "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
                        "filetypes": ["c", "cpp", "objc", "objcpp"]
                },
                "metals": {
                        "command": "metals-vim",
                        "rootPatterns": ["build.sbt"],
                        "filetypes": ["scala", "sbt"]
                }
        },
        "diagnostic-languageserver.filetypes": {
                "sh": "shellcheck"
        }
}
